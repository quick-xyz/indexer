
ENVIRONMENT=development  # "development" for dev, "production" for prod

# ========================================
# Required Environment Variables
# ========================================
INDEXER_GCP_PROJECT_ID=gcp-project-id
INDEXER_MODEL_NAME=model_name
INDEXER_GCS_BUCKET_NAME=gcs-bucket-name

# ========================================
# Optional Environment Variables for Development/Testing
# ========================================
LOG_LEVEL="DEBUG"  
INDEXER_LOG_DIR="./logs"
INDEXER_LOG_CONSOLE=True
INDEXER_LOG_FILE=True
INDEXER_LOG_STRUCTURED=True

# Local development via proxy. Remove for production (uses secret).
INDEXER_SQL_CONNECTION_NAME="indexerxyz:us-central1:indexerxyz-postgres"
INDEXER_DB_HOST="127.0.0.1"
INDEXER_DB_PORT="5432"

# Cloud SQL Proxy command (run in separate terminal):
# cloud_sql_proxy indexerxyz:us-central1:indexerxyz-postgres --port 5432
# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ========================================
# Database Configuration
# ========================================
INDEXER_DB_USER=your_db_username
INDEXER_DB_PASSWORD=your_db_password
INDEXER_DB_NAME=blockchain_indexer
INDEXER_DB_HOST=localhost
INDEXER_DB_PORT=5432

# ========================================
# Blockchain RPC Configuration
# ========================================
# Avalanche mainnet RPC endpoint
INDEXER_AVAX_RPC=https://your-rpc-endpoint.com
# Examples:
# QuickNode: https://your-project.avalanche-mainnet.quiknode.pro/api-key/
# Alchemy: https://avax-mainnet.g.alchemy.com/v2/your-api-key
# Public: https://api.avax.network/ext/bc/C/rpc

# ========================================
# Google Cloud Storage Configuration
# ========================================
INDEXER_GCS_PROJECT_ID=your-gcs-project-id
INDEXER_GCS_BUCKET_NAME=your-bucket-name
INDEXER_GCS_CREDENTIALS_PATH=./credentials/gcs-service-account.json

# ========================================
# Environment Mode
# ========================================
ENVIRONMENT=development   # "development" for dev, "production" for prod
LOG_LEVEL=DEBUG           # DEBUG, INFO, WARNING, ERROR

# ========================================
# Logging Configuration
# ========================================


# ========================================
# Development/Testing Overrides
# ========================================
# Uncomment for testing without GCS
# SKIP_GCS_TESTS=true

# Uncomment for development mode
# ENVIRONMENT=development